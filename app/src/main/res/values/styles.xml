<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Botões">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Operadores" parent="Botões">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Números" parent="Botões">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
    </style>
</resources>